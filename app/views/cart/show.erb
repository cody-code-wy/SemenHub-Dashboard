<% if @skus.empty? %>
  <p>Your cart is currently empty.</p>
<% else %>
  <table>
    <thead>
      <tr>
        <th>Sku#</th>
        <th>Seller#</th>
        <th>Animal Name</th>
        <th>Semen Type</th>
        <th>Semen Count</th>
        <th>Cane Code</th>
        <th>Quantity</th>
      </tr>
    </thead>
    <tbody>
      <% @skus.each do |sku| %>
        <tr>
          <td><%= sku.id %></td>
          <td><%= sku.seller.id %></td>
          <td><%= sku.animal.name %></td>
          <td><%= sku.semen_type %></td>
          <td><%= sku.semen_count %></td>
          <td><%= sku.cane_code %></td>
          <td><input type="text" id="quantity_sku_<%= sku.id %>" class="quantity_field" data-sku-id="<%= sku.id %>" value="<%= @quantities[sku.id] %>"></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <button type="button" id="update_cart_button">Update Cart</button>
  <%= link_to "Checkout", cart_checkout_path %>
<% end %>
