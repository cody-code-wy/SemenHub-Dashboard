<%= form_for @facility do |f| %>
    <div>
      <%= f.label :name, get_field_errors(@facility, :name) %>
      <%= f.text_field :name %>
    </div>
    <div>
      <%= f.label :phone_number, get_field_errors(@facility, :phone_number) %>
      <%= f.text_field :phone_number %>
    </div>
    <div>
      <%= f.label :email, get_field_errors(@facility, :email) %>
      <%= f.text_field :email %>
    </div>
    <div>
      <%=	f.label :website, get_field_errors(@facility, :website) %>
      <%= f.text_field :website %>
    </div>
    <div>
      <%= f.label :mailing_address %>
      <%= f.fields_for :mailing_address, @facility.address do |addr| %>
          <%= render "address", addr: addr, model: @facility.address %>
      <% end %>
    </div>
    <%= f.submit %>
<% end %>
